<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="clr-namespace:CapacitorScanner.ViewModels"
			 x:DataType="vm:BinControlViewModel"
             x:Class="CapacitorScanner.Controls.BinControl"
             >
	<Design.DataContext>
		<!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
		<vm:BinControlViewModel />
	</Design.DataContext>
			
	
	<WrapPanel>
		<Border BorderBrush="Black"
											BorderThickness="2"
											CornerRadius="3"
											Background="Gold"
											Height="200"
											Padding="20">
			<StackPanel Spacing="10" VerticalAlignment="Top" >
				<Border Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="3" >
					<TextBlock FontFamily="Century Gothic" FontSize="15"  FontWeight="Bold" Foreground="Black"  HorizontalAlignment="Center" Text="{Binding  $parent[UserControl].Bin.WasteType}" ></TextBlock>
				</Border>

				<Border BorderBrush="Black" BorderThickness="1" CornerRadius="3" Background="#a9d18e">
					<TextBlock FontWeight="Bold" Padding="10,0,0,0" FontFamily="Century Gothic" FontSize="15" Foreground="#3e5d28" Text="{Binding $parent[UserControl].Bin.Weight, StringFormat='{}{0} Kg'}"></TextBlock>
				</Border>
				<ProgressBar Width="10" Height="50" FontFamily="Century Gothic" FontSize="15"  FontWeight="Bold" Foreground="Green"
					Minimum="0" Maximum="100" Value="{Binding $parent[UserControl].Bin.Percentage}"
					ShowProgressText="True"/>
				<Button ClickMode="Press"   BorderBrush="Black" HorizontalAlignment="Stretch" BorderThickness="1" CornerRadius="3" Background="#ffff8e">
					<TextBlock FontWeight="Bold" FontFamily="Century Gothic" FontSize="15" HorizontalAlignment="Center" Foreground="#3e5d28" Text="{Binding $parent[UserControl].Bin.Name}" ></TextBlock>
				</Button>

			</StackPanel>
		</Border>
	</WrapPanel>
</UserControl>
